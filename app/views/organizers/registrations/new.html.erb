<% context='views.organizers.registrations.new' %>
<h2><%= t("#{context}.title") %></h2>
<h4><%= t("#{context}.subtitle_part1")%> <span><%= link_to t("#{context}.link"), new_organizer_session_path %></span></h4>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field form-group">
    <div class="row">
      <div class="col-lg-6">
        <%= f.label :company_name, t("#{context}.company_name") %>
        <%= f.text_field :company_name, :autofocus => true, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <div class="row">
      <div class="col-lg-6">
        <%= f.label :email, t("#{context}.email") %>
        <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <div class="row">
      <div class="col-lg-6">
        <%= f.label :password, t("#{context}.password")  %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>
  </div>


  <div class="field form-group">
    <div class="row">
      <div class="col-lg-6">
        <%= f.label :password_confirmation, t("#{context}.password_confirm")  %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <div class="row">
      <div class="col-lg-6">
        <%= f.submit t("#{context}.submit"), class: "btn btn-primary" %>
      </div>
    </div>
  </div>

<% end %>

<%= render "organizers/shared/links" %>
