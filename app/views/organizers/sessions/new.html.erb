<% context = 'views.organizers.sessions.new'%>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4">
        <h1 class="text-center login-title"><%= t("#{context}.title")%></h1>
        <div class="account-wall">
          <img  id="login-image" class="profile-img" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120"
          alt="">
          <div class="form-signin">
            <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: t("#{context}.email"), required: true, autofocus: true%>
            <%= f.password_field :password, class: "form-control", placeholder: t("#{context}.password"), required: true %>
            <%= submit_tag t("#{context}.submit", default: "Enviar"), class: "btn btn-lg btn-primary btn-block" %>
            <label class="checkbox pull-left">
              <input type="checkbox" value="remember-me" id="remember-me">
              <%= t("#{context}.remember_me") %>
            </label>
            <%= link_to t("#{context}.help"), pages_faq_path, class: "pull-right need-help" %>
            <span class="clearfix"></span>
          </div>
        </div>
        <%= render "organizers/shared/links" %>
      </div>
    </div>
  </div>
<% end %>
